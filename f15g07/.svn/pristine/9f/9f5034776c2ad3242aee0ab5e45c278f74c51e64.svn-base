/* datepicker */
.ui-datepicker-header {
    background: #7b5a7b;
}

.ui-datepicker-calendar thead {
    color: #7b5a7b;
}

.ui-datepicker-calendar td {
    background: none;
}

.ui-state-default {
    background: none !important;
}

.ui-state-active {
    border-color: #7b5a7b !important;
}

.ui-state-highlight {
    background: #7b5a7b !important;
    color: #fff !important;
    border-color: #7b5a7b !important;
}

.ui-state-hover {
    border-color: #7b5a7b !important;
}

.ui-datepicker-next, .ui-datepicker-prev {
    background: none !important;
    border: none !important;
    cursor: pointer;
}

.ui-datepicker-month, .ui-datepicker-year {
    color: #fff;
}
/* end of datepicker */

