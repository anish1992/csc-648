.tt-menu {
    width: 320px;
    padding: 8px 0;
    background-color: #fff;
    border: 1px solid rgba(0, 0, 0, 0.2);
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
    max-height: 360px;
    overflow-y: auto;
}

.tt-suggestion {
    padding: 3px 20px;
    font-size: 16px;
    line-height: 24px;
    color: black;
}

.tt-suggestion:hover {
  cursor: pointer;
  color: #fff;
  background-color: #330033;
}

.tt-suggestion.tt-cursor {
  color: #fff;
  background-color: #330033;
}

.suggestions-header {
    margin: 10px 20px 0 20px;
    padding: 3px 0;
    color: #330033;
    font-weight: bold;
}

.suggestions-header:hover {
  cursor: default;
}
