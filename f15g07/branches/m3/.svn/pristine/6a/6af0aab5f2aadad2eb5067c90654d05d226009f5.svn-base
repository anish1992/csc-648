#sidebar-main-wrapper {
    padding-left: 0;
    padding-top: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#sidebar-main-wrapper.toggled {
    padding-left: 420px;
}

.sidebar-right {
    z-index: 1000;
    padding-top: -20px;
    position: fixed;
    right: 420px;
    width: 0;
    height: 55%;
    margin-right: -440px;
    overflow-y: auto;
    background:transparent;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#sidebar-main-wrapper.toggled .sidebar-wrapper {
    width: 420px;
}
/* Sidebar Styles */

.sidebar-wrapper .sidebar-nav {
    position: absolute;
    top: 0;
    width: 400px;
    height: 400px;
    margin: 0;
    padding: 0;
    list-style: none;
}
.sidebar-wrapper .padding {
  width: 400px;
  height: 330px;
}
.sidebar-wrapper .sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
}

.sidebar-wrapper .sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: #999999;
}

.sidebar-wrapper .sidebar-nav li a:hover {
    text-decoration: none;
    color: #fff;
    background: rgba(255,255,255,0.2);
}

.sidebar-wrapper .sidebar-nav li a:active,
.sidebar-wrapper .sidebar-nav li a:focus {
    text-decoration: none;
}

.sidebar-wrapper .sidebar-nav > .sidebar-brand {
    height: 40px;
    font-size: 18px;
    line-height: 60px;
}

.sidebar-wrapper .sidebar-nav > .sidebar-brand a {
    color: #999999;
}

.sidebar-wrapper .sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
}

@media(min-width:768px) {
    #sidebar-main-wrapper {
        padding-right: 420px;
    }
    #sidebar-main-wrapper.toggled {
        padding-left: 0;
    }
    .sidebar-wrapper {
        width: 420px;
    }
    #sidebar-main-wrapper.toggled .sidebar-wrapper {
        width: 0;
    }
}
