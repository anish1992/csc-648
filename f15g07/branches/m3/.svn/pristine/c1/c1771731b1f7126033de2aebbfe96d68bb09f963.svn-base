/* datepicker */
.ui-datepicker-header {
    background: #7b5a7b;
}

.ui-datepicker-calendar thead {
    color: #7b5a7b;
}

.ui-datepicker-calendar td {
    background: none;
}

.ui-state-default {
    background: none !important;
}

.ui-state-active {
    border-color: #7b5a7b !important;
}

.ui-state-highlight {
    background: #7b5a7b !important;
    color: #fff !important;
    border-color: #7b5a7b !important;
}

.ui-state-hover {
    border-color: #7b5a7b !important;
}

.ui-datepicker-next, .ui-datepicker-prev {
    background: none !important;
    border: none !important;
    cursor: pointer;
}

.ui-datepicker-month, .ui-datepicker-year {
    color: #fff;
}
/* end of datepicker */

/* host ui elements */

.card {
    position: relative;
    margin-bottom: 1.25em;
    max-width: 800px;
    margin-left: 1px;
    margin-right: 1px;
    border: 1em solid #e5e5e5;
    border-radius: 1em;
    padding-left: 0px;
    padding-right: 0px;
}

.card-block {
  padding: 1.25em;
}

.card-title {
  margin-top: 0;
  margin-bottom: .75em;
}

.card-subtitle {
  margin-top: -(.75em / 2);
  margin-bottom: 0;
}

.card-text:last-child {
  margin-bottom: 0;
}

.card-header {
  padding: .75em 1.25em;
  background-color: #f5f5f5;
  border-bottom: .0625em solid #e5e5e5;
}

.card-footer {
  padding: 1.25em;
  background-color: #f5f5f5;
  border-top: .0625em solid #e5e5e5;
}

/*.card-footer:visted{
    color: #e5e5e5;
}*/

.card-columns {
  column-count: 3;
  column-gap: 1.25em;

}
/* end of host ui elements */
