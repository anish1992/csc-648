/* Toggle Styles */
.row {

  width: 400px;
  height: 450px;
  padding-left: 25px;
  padding-right: 25px;

}
.row2 {

  width: 400px;
  height: 700px;
  padding-left: 25px;
  padding-right: 25px;

}
.sidebar-brand li {
  width: 360px;
  height: 10px;
}
.row .box_setup {
  width: 350px;
  height: 400px;

}

.row2 .box_setup2 {
  width: 350px;
  height: 650px;

}
.sidebar-nav .container2 {
  width: 400px;
  height: 670px;
}
.sidebar-nav .container{
  width: 400px;
  height: 450px;

}
.form-signin
{
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
}
.form-signin .form-signin-heading, .form-signin .checkbox
{
    margin-bottom: 10px;
}
.form-signin .checkbox
{
    font-weight: normal;
}
.form-signin .form-control
{
    position: relative;
    font-size: 16px;
    height: auto;
    padding: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.form-signin .form-control:focus
{
    z-index: 2;
}
.form-signin input
{
    margin-bottom: 10px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}
.account-wall
{
    height: 350px;
    margin-top: 20px;
    padding: 20px 0px 20px 0px;
    background-color: #f7f7f7;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
}

.account-wall2
{
    height: 600px;
    margin-top: 20px;
    padding: 20px 0px 20px 0px;
    background-color: #f7f7f7;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
}
.login-title
{
    color: #555;
    font-size: 18px;
    font-weight: 400;
    display: block;
}
.profile-img
{
    width: 96px;
    height: 96px;
    margin: 0 auto 10px;
    display: block;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
}
.need-help
{
    margin-top: 10px;
}

#wrapper {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
#wrapper2 {
    padding-left: 0;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
#wrapper.toggled {
    padding-left: 420px;
}

#wrapper2.toggled2 {
    padding-left: 420px;
    padding-right: 1862px;
}

#sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    right: 420px;
    width: 0;
    height: 100%;
    margin-right: -440px;
    overflow-y: auto;
    background: #222;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
#sidebar-wrapper2 {
    z-index: 1000;
    position: fixed;
    right: 420px;
    width: 0;
    height: 100%;
    margin-right: -440px;
    overflow-y: auto;
    background: #222;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
#wrapper.toggled #sidebar-wrapper {
    width: 420px;
}

#wrapper2.toggled2 #sidebar-wrapper2 {
    width: 420px;
}
#page-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 15px;
}
#page-content-wrapper2 {
    width: 100%;
    position: absolute;
    padding: 15px;
}
#wrapper.toggled #page-content-wrapper {
    position: absolute;
    margin-left: -420px;
}
#wrapper2.toggled2 #page-content-wrapper2 {
    position: absolute;
    margin-left: -420px;
}
/* Sidebar Styles */

.sidebar-nav {
    position: absolute;
    top: 0;
    width: 400px;
    height: 950px;
    margin: 0;
    padding: 0;
    list-style: none;
}
.padding {
  width: 400px;
  height: 330px;
}
.sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
}

.sidebar-nav li a {
    display: block;
    text-decoration: none;
    color: #999999;
}

.sidebar-nav li a:hover {
    text-decoration: none;
    color: #fff;
    background: rgba(255,255,255,0.2);
}

.sidebar-nav li a:active,
.sidebar-nav li a:focus {
    text-decoration: none;
}

.sidebar-nav > .sidebar-brand {
    height: 40px;
    font-size: 18px;
    line-height: 60px;
}

.sidebar-nav > .sidebar-brand a {
    color: #999999;
}

.sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
}

@media(min-width:768px) {
    #wrapper {
        padding-right: 420px;
    }
    #wrapper2 {
        padding-right: 420px;
    }
    #wrapper.toggled {
        padding-left: 0;
    }
    #wrapper2.toggled2 {
        padding-left: 0;
    }
    #sidebar-wrapper {
        width: 420px;
    }
    #sidebar-wrapper2 {
        width: 420px;
    }
    #wrapper.toggled #sidebar-wrapper {
        width: 0;
    }

    #wrapper2.toggled2 #sidebar-wrapper2 {
        width: 0;
    }

    #page-content-wrapper {
        padding: 20px;
        position: relative;
    }
    #page-content-wrapper2 {
        padding: 20px;
        position: relative;
    }
    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-left: 0;
    }
    #wrapper2.toggled2 #page-content-wrapper2{
        position: relative;
        margin-left: 0;
    }
}
